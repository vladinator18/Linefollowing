#!/usr/bin/env python3
"""
EROBOTA16 - DISCRETE DIRECTIONAL CONTROL (9600 Baud)
- FIRMWARE REQUIRED: V4.2 (With 1-6 command logic)

MAPPINGS:
- Axis 1 (Left Stick Y): UP -> '1' (Fwd), DOWN -> '2' (Back)
- Axis 0 (Left Stick X): LEFT -> '3' (Left), RIGHT -> '4' (Right)
- Axis 3 (Trigger/Stick): > 0.5 -> '5' (Stop/Center)
- Axis 4 (Trigger/Stick): > 0.5 -> '6' (Stop/Center)
"""

import tkinter as tk
from tkinter import ttk, messagebox
import serial
import serial.tools.list_ports
import time
import pygame
import threading

class RobotController:
    def __init__(self):
        self.ser = None
        self.connected = False
        self.last_command_sent = None
        self.last_send_time = 0
        
    def find_arduino(self):
        ports = serial.tools.list_ports.comports()
        for p in ports:
            if any(x in p.description for x in ['Arduino', 'CH340', 'USB Serial', 'CP210']):
                return p.device
        return None
    
    def connect(self, port, baud=9600):
        try:
            self.ser = serial.Serial(port, baud, timeout=1)
            self.connected = True
            time.sleep(2) 
            return True
        except Exception as e:
            print(f"Error: {e}")
            return False
    
    def disconnect(self):
        if self.ser and self.ser.is_open:
            self.send_raw("5") # Ensure stop before disconnect
            time.sleep(0.1)
            self.ser.close()
        self.connected = False
    
    def send_raw(self, command):
        if not self.connected: return False
        
        current_time = time.time()
        # Send if state changed OR it's been > 200ms (heartbeat)
        if command != self.last_command_sent or (current_time - self.last_send_time > 0.2):
            if self.ser and self.ser.is_open:
                try:
                    full_cmd = f"{command}\n"
                    self.ser.write(full_cmd.encode())
                    self.last_command_sent = command
                    self.last_send_time = current_time
                    print(f"Sent: {command.strip()}") # Debug logging
                    return True
                except:
                    return False
        return False

class JoystickHandler:
    def __init__(self, callback):
        self.callback = callback
        self.joystick = None
        self.running = True
        
        # Tuning
        self.deadzone = 0.3 # Higher deadzone for discrete switching
        
        pygame.init()
        pygame.joystick.init()
        
        self.thread = threading.Thread(target=self.joystick_loop, daemon=True)
        self.thread.start()
    
    def joystick_loop(self):
        while self.running:
            try:
                if pygame.joystick.get_count() > 0:
                    if self.joystick is None:
                        self.joystick = pygame.joystick.Joystick(0)
                        self.joystick.init()
                    
                    pygame.event.pump()
                    
                    num_axes = self.joystick.get_numaxes()
                    
                    # -- READ AXES --
                    # Default standard mappings, adjustable via UI in full version
                    # But hardcoded here for robustness based on request
                    ax0 = self.joystick.get_axis(0) if num_axes > 0 else 0.0 # Left X
                    ax1 = self.joystick.get_axis(1) if num_axes > 1 else 0.0 # Left Y
                    ax3 = self.joystick.get_axis(3) if num_axes > 3 else 0.0 
                    ax4 = self.joystick.get_axis(4) if num_axes > 4 else 0.0
                    
                    all_axes = [self.joystick.get_axis(i) for i in range(min(num_axes, 6))]

                    # -- LOGIC FOR DISCRETE COMMANDS --
                    cmd = "5" # Default to STOP/CENTER

                    # Check "Stop" Axes first (Priority)
                    if abs(ax3) > 0.5:
                        cmd = "5"
                    elif abs(ax4) > 0.5:
                        cmd = "6"
                    else:
                        # Directional Logic (Dominant Axis wins)
                        if abs(ax1) > abs(ax0) and abs(ax1) > self.deadzone:
                            # Vertical Movement
                            if ax1 < 0: cmd = "1" # Up -> Forward
                            else: cmd = "2"       # Down -> Backward
                        elif abs(ax0) > abs(ax1) and abs(ax0) > self.deadzone:
                            # Horizontal Movement
                            if ax0 < 0: cmd = "3" # Left
                            else: cmd = "4"       # Right
                        else:
                            cmd = "5" # Center

                    self.callback(cmd, all_axes)
                else:
                    self.joystick = None
                    self.callback("NC", []) # Not Connected
                
                time.sleep(0.05) 
            except Exception as e:
                print(f"Joy error: {e}")
                time.sleep(0.1)
    
    def stop(self):
        self.running = False

class RogAllyUI:
    def __init__(self, root):
        self.root = root
        self.root.title("EROBOTA16 - DIRECTIONAL")
        self.root.geometry("600x450")
        self.root.configure(bg='#0d1117')
        
        self.controller = RobotController()
        
        self.bg_card = '#161b22'
        self.accent_color = '#00d9ff'
        self.text_white = '#ffffff'
        
        self.current_cmd = "5"
        self.raw_axes = []
        
        self.create_ui()
        self.joystick_handler = JoystickHandler(self.on_joystick_update)
        self.update_loop()
        self.root.protocol("WM_DELETE_WINDOW", self.on_closing)
    
    def on_joystick_update(self, cmd, all_axes):
        self.current_cmd = cmd
        self.raw_axes = all_axes
        if cmd != "NC":
            self.controller.send_raw(cmd)
    
    def create_ui(self):
        # Header
        header = tk.Frame(self.root, bg=self.bg_card, height=60)
        header.pack(fill=tk.X, padx=10, pady=10)
        tk.Label(header, text="DIRECTIONAL MODE", font=("Arial Black", 18), fg=self.accent_color, bg=self.bg_card).pack(side=tk.LEFT, padx=10)
        
        # Connection
        c_frame = tk.Frame(self.root, bg='#0d1117')
        c_frame.pack(fill=tk.X, padx=10)
        self.port_combo = ttk.Combobox(c_frame, width=20, state='readonly')
        self.port_combo.pack(side=tk.LEFT)
        tk.Button(c_frame, text="Scan", command=self.refresh_ports).pack(side=tk.LEFT, padx=5)
        self.connect_btn = tk.Button(c_frame, text="CONNECT", command=self.toggle_connection, bg='red', fg='white')
        self.connect_btn.pack(side=tk.LEFT, padx=5)
        self.refresh_ports()

        # Display Current Command
        self.cmd_label = tk.Label(self.root, text="-", font=("Arial", 72, "bold"), fg=self.text_white, bg='#0d1117')
        self.cmd_label.pack(pady=30)
        
        self.desc_label = tk.Label(self.root, text="Waiting...", font=("Arial", 14), fg='#8b949e', bg='#0d1117')
        self.desc_label.pack()

        # Axis Debug
        self.axis_label = tk.Label(self.root, text="Axes: []", font=("Courier", 10), fg='#8b949e', bg='#0d1117')
        self.axis_label.pack(side=tk.BOTTOM, pady=10)

    def refresh_ports(self):
        ports = [p.device for p in serial.tools.list_ports.comports()]
        self.port_combo['values'] = ports
        if ports: self.port_combo.current(0)

    def toggle_connection(self):
        if not self.controller.connected:
            if self.controller.connect(self.port_combo.get()):
                self.connect_btn.config(text="DISCONNECT", bg='green')
            else:
                messagebox.showerror("Error", "Failed")
        else:
            self.controller.disconnect()
            self.connect_btn.config(text="CONNECT", bg='red')

    def update_loop(self):
        # Update big number display
        self.cmd_label.config(text=self.current_cmd)
        
        # Update Description
        desc = "STOP"
        if self.current_cmd == "1": desc = "FORWARD"
        if self.current_cmd == "2": desc = "BACKWARD"
        if self.current_cmd == "3": desc = "LEFT SPIN"
        if self.current_cmd == "4": desc = "RIGHT SPIN"
        if self.current_cmd == "5" or self.current_cmd == "6": desc = "CENTER/STOP"
        if self.current_cmd == "NC": desc = "NO CONTROLLER"
        
        self.desc_label.config(text=desc)
        
        # Update Axis Debug
        formatted_axes = [f"{x:.1f}" for x in self.raw_axes]
        self.axis_label.config(text=f"Axes: {formatted_axes}")
        
        self.root.after(50, self.update_loop)

    def on_closing(self):
        self.joystick_handler.stop()
        self.controller.disconnect()
        self.root.destroy()

if __name__ == "__main__":
    root = tk.Tk()
    RogAllyUI(root)
    root.mainloop()
